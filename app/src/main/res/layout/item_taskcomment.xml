<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_jcd_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:src="@drawable/task_ywc"></ImageView>


    <TextView
        android:id="@+id/tv_jcd_name"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginLeft="5dp"
        android:layout_weight="2"
        android:gravity="center"
        android:text="@string/jcd"
        android:textColor="#333"
        android:textSize="14sp" />


    <TextView
        android:id="@+id/tv_jcd_user"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginLeft="5dp"
        android:layout_weight="2"
        android:gravity="center"
        android:text="张三"
        android:textColor="#333"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_time_start"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginLeft="5dp"
        android:layout_weight="3"
        android:gravity="center"
        android:text="2017-08-08"
        android:textColor="#333"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_time_end"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_weight="3"
        android:gravity="center"
        android:text="2017-09-09"
        android:textColor="#333"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_task_submit"
        android:layout_width="0dp"
        android:layout_height="33dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_weight="3"
        android:background="@drawable/yuan_bg"
        android:gravity="center"
        android:text="@string/task_bjjs"
        android:textColor="#fff"
        android:textSize="10sp"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iv_modify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:src="@drawable/main_edit" />


</LinearLayout>